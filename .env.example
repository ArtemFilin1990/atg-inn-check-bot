# Telegram bot token (secret in Amvera)
BOT_TOKEN=your_telegram_bot_token

# DaData API credentials (secrets in Amvera)
DADATA_API_KEY=your_dadata_api_key
DADATA_TOKEN=your_dadata_api_key
DADATA_SECRET=your_dadata_secret_key

# Mode: polling or webhook
MODE=polling

# Webhook settings (only needed in webhook mode)
WEBHOOK_BASE=https://your-domain.amvera.ru
WEBHOOK_URL=https://your-domain.amvera.ru
WEBHOOK_PATH=/webhook
PORT=3000

# Database paths (use /data for Amvera persistence)
DB_DIR=/data/db
CACHE_DB_PATH=/data/db/cache.sqlite
REF_DB_PATH=/data/db/reference_data.sqlite
SESSION_DB_PATH=/data/db/sessions.sqlite

# HTTP client settings
HTTP_TIMEOUT_SECONDS=15
HTTP_RETRY_COUNT=2

# INN checksum validation (set to true for strict mode)
STRICT_INN_CHECK=false

# Logging level
LOG_LEVEL=INFO

# Set automatically by Amvera in cloud environment
# AMVERA=1
